\definecolor{orangeCS}{RGB}{255, 109, 9} % Orange Club Scientifique
\definecolor{bleuCS}{RGB}{32, 32, 70} % Bleu Club Scientifique

\newif\ifbeamer@secheader
\beamer@secheaderfalse

\ProcessOptionsBeamer
\setbeamertemplate{blocks}[default]

